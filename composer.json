{
  "name": "pion/laravel-lelastico",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Kluska",
      "email": "martin@kluska.cz"
    }
  ],
  "require": {
    "php": ">=8.1",
    "illuminate/support": ">=5.5",
    "illuminate/http": ">=5.5",
    "illuminate/pagination": ">=5.5",
    "illuminate/console": ">=5.5",
    "elasticsearch/elasticsearch": "^7.17",
    "erichard/elasticsearch-query-builder": "dev-upgrade-3#068a17f4fe8fc592f3ae31bf0db8dc2b73f6d734",
    "illuminate/validation": ">=5.5"
  },
  "require-dev": {
    "nunomaduro/larastan": "^1.0.3",
    "orchestra/testbench": "^7.1",
    "phpstan/phpdoc-parser": "^1.2",
    "phpstan/phpstan": "^1.4",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-mockery": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpunit/phpunit": "^9.5.13",
    "rector/rector": "^0.12.17",
    "sentry/sentry-laravel": "^2.11",
    "symplify/easy-coding-standard": "^10.1"
  },
  "suggest": {
    "sentry/sentry-laravel": "For tracking metrics of your elastic queries. Automatically tracked."
  },
  "autoload": {
    "psr-4": {
      "Lelastico\\": "src/"
    }
  },
  "scripts": {
    "lint:fix": "./vendor/bin/ecs --fix",
    "lint:stan": "./vendor/bin/phpstan",
    "lint:upgrade": "vendor/bin/rector process",
    "lint:md": "vendor/bin/ecs check-markdown README.md CHANGELOG.md CODE_OF_CONDUCT.md LICENSE.md",
    "lint": "composer lint:fix && composer lint:upgrade && composer lint:stan && composer lint:md",
    "test": "./vendor/bin/phpunit"
  },
  "extra": {
    "laravel": {
      "providers": [
        "\\Lelastico\\LelasticoServiceProvider"
      ]
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/pionl/elasticsearch-query-builder.git"
    }
  ],
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "prefer-stable": true,
  "minimum-stability": "dev"
}
